_red = #cc0000
_gray = #6f6f6f
_lightGray = #ababab

.root
  flex-direction row
  margin-top 2u

  &.first
    margin-top 0

.avatar
  width 4u
  height 4u
  border-radius 5u

.content
  margin-left 1u
  flex-shrink 1
  width 100%
  padding-bottom 1u

  +native()
    border-bottom-width 1px
    border-color #cccccc

  +web()
    border-bottom 1px solid #cccccc

.message
  justify-content flex-start
  margin-top 1u
  align-items baseline
  +desktop()
    flex-direction row

.nameText,
.hashText
  color _red

.hashText
  +desktop()
    margin-left 1u

.text
  color _gray
  line-height 2.5u

.dateText
  color _lightGray
  margin-top 1u

.bottom
  margin-top 1u

.manage
  display none
  +desktop()
    position absolute
    right 0
    display flex
